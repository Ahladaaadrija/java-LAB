import java.util.*;
public class Main{
    public static void main(String[] args){
        Scanner sc=new Scanner(System.in);
        int n,i,s=0;
        System.out.println("Enter the number");
        n=sc.nextInt();
        for(i=1;i<=n;i++){
            s=s+i;
        }
            System.out.println("the sum of "+n+" natural number is"+s);
        
    }
}
